@model AHDDManager.Models.Invoice

@{
    Layout = "~/Views/Shared/_InvoiceLayout.cshtml";
}

@{
    ViewBag.Title = "Receipt";
}

<style>
    .main {
        background: #ffffff;
        border-bottom: 15px solid #F81D2D;
        border-top: 15px solid #1E1F23;
        margin-top: 30px;
        margin-bottom: 30px;
        padding: 20px 30px !important;
        position: relative;
        box-shadow: 0 1px 21px #808080;
        font-size: 19px;
        max-width: 100%;
        width: 1170px;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }
    .tr-note {
        font-size: 0.7em;
    }

    #divTotalDue {
        color: #F81D2D !important
    }

</style>
<script>
    $(function () {
        //Auto print when open
        sendToPrint();
    });

    function sendToPrint() {
        window.print();
    }
</script>

<div class="container">
    <div class="row">
        <div class="main">
            <div class="col-md-12">
                <div class="hidden-print"><a href="#" id="print" onclick="sendToPrint()"><img src="/images/print.png" width="25" height="25" /></a></div>
                <div class="row">
                    <div class="=row col-sm-12">
                        <h3><strong>Agencia Hispana De Dallas on Bishop Ave.</strong></h3>
                    </div>

                    <table class="table">
                        <tr>
                            <td>
                                <div>
                                    <div> <strong id="lblBizName">@Model.Business.BusinessName</strong></div>
                                    <div id="lblBizAddress">@Model.Business.Address  </div>
                                    <div>@Model.Business.City, @Model.Business.State @Model.Business.Zip </div>
                                    <div id="lblBizPhone">@Model.Business.PhoneFomatted</div>
                                    <!-- <div id="lblBizEmail">[NEED TO ADD BIZ EMAIL]</div> -->
                                </div>
                            </td>
                            <td>
                                <div class="text-right top">
                                    <div id="lblCustName">@Model.Customer.FirstName @Model.Customer.LastName</div>
                                    <div id="lblCustName">@Model.Customer.SecondaryFirstName @Model.Customer.SecondaryLastName</div>
                                    <div id="lblCustAddress">@Model.Customer.Address  </div>
                                    <div>@Model.Customer.City , @Model.Customer.State @Model.Customer.Zip</div>

                                    <div id="lblCustPhone">@Model.Customer.MobileFormatted</div>
                                    <div id="lblCustEmail">@Model.Customer.Email</div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <table class="table">
                    <tr>
                        <td>
                            <div class="text-center">
                                <h4 id="lblInvoice"><strong>Rep:</strong></h4>
                                <h4>@Model.Transaction.TakenBy</h4>
                            </div>
                        </td>
                        <td>
                            <div class="text-center">
                                <h4 id="lblInvoice"><strong>Customer ID:</strong></h4>
                                <h4>@Model.Customer.CustomerID</h4>

                            </div>
                        </td>
                        <td>
                            <div class="text-center">
                                <h4 id="lblInvoice"><strong>Receipt No.</strong></h4>
                                <h4>@Model.Transaction.TransactionID</h4>
                            </div>
                        </td>
                        <td>
                            <div class="text-center">
                                <h4 id="lblInvoiceDate"><strong>Receipt Date:</strong></h4>
                                <h4>@Model.Transaction.TransactionDate.ToString("MM/dd/yyyy hh:mm tt")</h4>
                            </div>
                        </td>
                    </tr>
                </table>
                <table class="table" id="tblTrans">
                    <thead>
                        <tr>
                            @*<th><h5>Item #</h5></th>*@
                            <th>Description</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{ foreach (AHDDManagerClass.TransactionDetail item in Model.TransactionDetails)
                            {

                                <tr>
                                    @*<td class="col-md-2">@item.TransactionDetailID</td>*@
                                    <td class="col-sm-7">@item.FormTitle</td>
                                    <td class="col-sm-1 text-center">@item.Quantity</td>
                                    <td class="col-sm-2 text-right">@item.PriceCharged.ToString("C") </td>
                                    <td class="col-sm-2 text-right"> @item.Total.ToString("C") </td>
                                </tr>
                                if (!string.IsNullOrWhiteSpace(item.Notes))
                                {
                                    <tr class="tr-note">
                                        @*<td class="col-md-2"></td>*@
                                        <td class="col-sm-12" colspan="4">*Note: @item.Notes</td>
                                    </tr>
                                }
                            }

                        }

                        <tr>
                            @*<td class="col-md-2"></td>*@
                            <td class="col-sm-7"></td>
                            <td class="col-sm-1"></td>
                            <td class="col-sm-2 text-right">
                                <p>
                                    <strong>Total: </strong>
                                </p>
                            </td>

                            <td class="col-sm-2 text-right">
                                <p id="lblSubTotal">
                                    <strong> @Model.Transaction.TotalAmount.ToString("C")  </strong>
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <h3><strong>Payments</strong></h3>
                <table class="table" id="tblPayments">
                    <tr>
                        <th class="col-sm-4">Rep</th>
                        <th class="col-sm-3">Date</th>
                        <th class="col-sm-3">Method</th>
                        <th class="col-sm-2 text-center">Amount</th>
                    </tr>

                    @{ foreach (AHDDManagerClass.Payment item in Model.Payments)
                        {

                            <tr>
                                <td>@item.TakenBy</td>
                                <td>@item.PaymentDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                                <td>@item.PaymentMethodDescription</td>
                                <td class="col-md-2 text-right">@item.PaymentAmount.ToString("C") </td>
                            </tr>
                        }

                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td class="col-md-3 text-right"><strong>Total Paid: </strong></td>
                        <td class="col-md-3 text-right">
                            <p id="lblBalance">
                                <strong> @Model.Transaction.TotalCollected.ToString("C")  </strong>
                            </p>
                        </td>
                    </tr>

                </table>

                @if (Model.Refunds != null && Model.Refunds.Count() > 0)
                {
                    <h3><strong>Refunds</strong></h3>
                    <table class="table" id="tblRefounds">
                        <tr>
                            <th class="col-sm-4">Rep</th>
                            <th class="col-sm-3">Date</th>
                            <th class="col-sm-3">Note</th>
                            <th class="col-sm-2">Refund Amount</th>
                        </tr>

                        @{ foreach (AHDDManagerClass.Refund item in Model.Refunds)
                            {

                                <tr>
                                    <td>@item.RefundedBy</td>
                                    <td>@item.RefundDate</td>
                                    <td>@item.Note</td>
                                    <td class="text-right">@item.RefundAmount.ToString("C") </td>
                                </tr>
                            }

                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td class="col-sm-3 text-right"><strong>Total Refunded:</strong></td>
                            <td class="col-sm-2 text-right">
                                <p id="lblBalance">
                                    <strong> @Model.Transaction.RefundedAmount.ToString("C")  </strong>
                                </p>
                            </td>
                        </tr>
                    </table>
                }

                <div id="divTotalDue">
                    <div class="col-sm-10 text-right"><strong>Total Due:</strong></div>
                    <div class=" col-sm-2 text-right" id="lblTotal"><strong>@Model.Transaction.TotalOwed.ToString("C") </strong></div>
                </div>
            </div>
            <div class="col-md-12 text-center">
                Thank you for your business!
            </div>
        </div>
    </div>
</div>



