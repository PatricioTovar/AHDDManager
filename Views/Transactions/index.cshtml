    <tr>
        <th>Trans ID</th>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Transaction Date</th>
        <th>Status</th>
        <th>Rep</th>
        <th>Total Amount</th>
        <th>Total Collected</th>
        <th>Amount Due</th>
    </tr>
</table>

